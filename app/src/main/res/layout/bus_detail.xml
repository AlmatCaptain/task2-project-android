<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BusDetailActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_v"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/card_margin"
        android:layout_marginVertical="@dimen/activity_horizontal_margin"
        android:background="@drawable/card_style"
        android:padding="10dp"
        app:cardCornerRadius="@dimen/card_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin"
            android:orientation="vertical">
            
            <ImageView
                android:id="@+id/bus_image"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/direct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/text_title"
                    tools:text="Direct" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Departure"
                            android:textSize="@dimen/text_size" />

                        <TextView
                            android:id="@+id/fromDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="@dimen/text_size"
                            tools:text="Departure" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/arrival"
                            android:textSize="@dimen/text_size" />

                        <TextView
                            android:id="@+id/toDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="@dimen/text_size"
                            tools:text="Arrival" />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/text_ver_padding">

                    <TextView
                        android:id="@+id/bus_brand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        tools:text="brand" />

                    <TextView
                        android:id="@+id/bus_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        tools:text="number" />

                    <TextView
                        android:id="@+id/bus_seat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        tools:text="seat" />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/activity_vertical_margin">
                <Button
                    android:id="@+id/seat1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_back"
                    android:layout_height="wrap_content"
                    android:text="1"/>
                <Button
                    android:id="@+id/seat2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_back"
                    android:layout_height="wrap_content"
                    android:text="2"/>
                <Button
                    android:id="@+id/seat3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_back"
                    android:layout_marginLeft="@dimen/seat_space"
                    android:layout_height="wrap_content"
                    android:text="3"/>

                <Button
                    android:id="@+id/seat4"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_back"
                    android:layout_height="wrap_content"
                    android:text="4" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/seat5"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_back"
                    android:text="5"/>
                <Button
                    android:id="@+id/seat6"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_back"
                    android:layout_height="wrap_content"
                    android:text="6"/>
                <Button
                    android:id="@+id/seat7"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_back"
                    android:layout_marginLeft="@dimen/seat_space"
                    android:layout_height="wrap_content"
                    android:text="7"/>

                <Button
                    android:id="@+id/seat8"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_back"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_item_text"
                    android:text="8" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/seat9"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_back"
                    android:layout_height="wrap_content"
                    android:text="9"/>
                <Button
                    android:id="@+id/seat10"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_back"
                    android:layout_height="wrap_content"
                    android:text="10"/>
                <Button
                    android:id="@+id/seat11"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_back"
                    android:layout_marginLeft="@dimen/seat_space"
                    android:layout_height="wrap_content"
                    android:text="11"/>

                <Button
                    android:id="@+id/seat12"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_back"
                    android:layout_height="wrap_content"
                    android:text="12" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/seat13"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_back"
                    android:layout_height="wrap_content"
                    android:text="13"/>
                <Button
                    android:id="@+id/seat14"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_back"
                    android:layout_height="wrap_content"
                    android:text="14"/>
                <Button
                    android:id="@+id/seat15"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_back"
                    android:layout_marginLeft="@dimen/seat_space"
                    android:layout_height="wrap_content"
                    android:text="15"/>

                <Button
                    android:id="@+id/seat16"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_back"
                    android:layout_height="wrap_content"
                    android:text="16" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/seat17"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_back"
                    android:layout_height="wrap_content"
                    android:text="17"/>
                <Button
                    android:id="@+id/seat18"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_back"
                    android:layout_height="wrap_content"
                    android:text="18"/>
                <Button
                    android:id="@+id/seat19"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_back"
                    android:layout_marginLeft="@dimen/seat_space"
                    android:layout_height="wrap_content"
                    android:text="19"/>

                <Button
                    android:id="@+id/seat20"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_back"
                    android:layout_height="wrap_content"
                    android:text="20" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/seat21"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_back"
                    android:layout_height="wrap_content"
                    android:text="21"/>
                <Button
                    android:id="@+id/seat22"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_back"
                    android:layout_height="wrap_content"
                    android:text="22"/>
                <Button
                    android:id="@+id/seat23"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_back"
                    android:layout_marginLeft="@dimen/seat_space"
                    android:layout_height="wrap_content"
                    android:text="23"/>

                <Button
                    android:id="@+id/seat24"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_back"
                    android:layout_height="wrap_content"
                    android:text="24" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/seat25"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_back"
                    android:layout_height="wrap_content"
                    android:text="25"/>
                <Button
                    android:id="@+id/seat26"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_back"
                    android:layout_height="wrap_content"
                    android:text="26"/>
                <Button
                    android:id="@+id/seat27"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_back"
                    android:layout_height="wrap_content"
                    android:text="27"/>
                <Button
                    android:id="@+id/seat28"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_back"
                    android:layout_height="wrap_content"
                    android:text="28"/>

                <Button
                    android:id="@+id/seat29"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_back"
                    android:layout_height="wrap_content"
                    android:text="29" />
            </LinearLayout>
            <Button
                android:id="@+id/booking_but"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#3ee66b"
                android:text="@string/to_book_text"
                android:textAllCaps="false"
                android:textSize="@dimen/sign_in_size"
                android:layout_marginVertical="@dimen/margin_space_items"
                tools:ignore="ButtonStyle" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</ScrollView>